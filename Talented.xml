            print("PvE Button Loaded")
        </OnLoad>
    </Scripts>
</Frame>

<Frame name="TalentedSavedBuildsDropdownPvP" inherits="TalentedSavedBuildsDropdownTemplate" parent="PlayerTalentFramePVPTalents" hidden="false">
    <Anchors>
        <Anchor point="BOTTOMRIGHT">
            <Offset x="-108" y="-29" />
        </Anchor>
    </Anchors>
    <Scripts>
        <OnLoad>
            print("PvP Button Loaded")
        </OnLoad>
    </Scripts>
</Frame>





