<Ui xmlns=“http://www.blizzard.com/wow/ui/“
        xmlns:xsi=“http://www.w3.org/2001/XMLSchema-instance“
        xsi:schemaLocation=“http://www.blizzard.com/wow/ui/
        http://wowprogramming.com/FrameXML/UI.xsd“>

<Frame name="Talented_Input" parent="UIParent" frameStrata="DIALOG">
    <Size x="200" y="150" />
    <Anchors>
        <Anchor point="Center" relativePoint="Center" relativeTo="UIParent" />
    </Anchors>
    <Layers>
        <Layer level="Background" setAllPoints="true">
            <Color r="1.0" g="1.0" b="0.0" a="0.5" />
        </Layer>
    </Layers>
    <Scripts>
        <OnEnterPressed function="self:Hide()" />
        <OnEscapePressed function="self:Hide()" />
    </Scripts>

    <EditBox name="$parent_Box" inherits="InputBoxTemplate">
        <Size x="250" y="20" />
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Scripts>
            <OnLoad function="self:SetAutoFocus(true)"/>
        </Scripts>
        <FontString inherits="GameFontHighlight" />
    </EditBox>
</Frame>


</Ui>